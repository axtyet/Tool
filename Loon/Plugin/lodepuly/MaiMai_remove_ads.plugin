[Rewrite]
# 开屏广告、职位页面横幅
^https:\/\/(h3\.)?open\.taou\.com\/maimai\/adshow\? reject-dict

# 赠送礼物 - 横幅
^https:\/\/(h3\.)?open\.taou\.com\/maimai\/pay\/v5\/check_gift\? reject-dict

# 信息流推广卡片
^https:\/\/(h3\.)?open\.taou\.com\/maimai\/go_gossip_darwin\/external\/v2\/query_flow_cards\? reject-dict

# 帖子末尾 - 看过此贴的用户也在看
^https:\/\/(h3\.)?open\.taou\.com\/maimai\/feed\/v6\/detail_recommend_feeds\? response-body-json-del feeds

[Script]
# 移除信息流广告、文章末尾推广卡片、评论区广告
http-response ^https:\/\/(h3\.)?open\.taou\.com\/maimai\/feed\/v\d\/(feed_detail_header|focus_feed)\? script-path = https://raw.githubusercontent.com/axtyet/Tool/main/Loon/Script/lodepuly/MaiMai/MaiMai_remove_ads.js, requires-body = true, tag = 移除内容广告
http-response ^https:\/\/(h3\.)?open\.taou\.com\/maimai\/gossip\/v\d\/gossip_detail_comment\? script-path = https://raw.githubusercontent.com/axtyet/Tool/main/Loon/Script/lodepuly/MaiMai/MaiMai_remove_ads.js, requires-body = true, tag = 移除内容广告

[Mitm]
hostname = open.taou.com, h3.open.taou.com