[Rule]
DOMAIN, ad.v3mh.com, REJECT
DOMAIN, ipv6.kkmh.com, REJECT
DOMAIN, ipv4.kkmh.com, REJECT

[Rewrite]
# 广告配置
^https:\/\/(cdn-)?api\.kkmh\.com\/v\d\/ad\/ reject-dict

# 首页弹窗
^https:\/\/h5\.kuaikanmanhua\.com\/user\/scene\/api\/new_user\/sign_in\/list reject-dict

# 活动广告
^https:\/\/(cdn-)?api\.kkmh\.com\/v\d\/business\/activities\/get reject-dict
^https:\/\/(cdn-)?api\.kkmh\.com\/v\d\/business\/mine\/business_config reject-dict

# 游戏 - 活动配置
^https:\/\/topic\.kkmh\.com\/gamecard\/v\d\/activityModule\/userSignInInfo\?activitySignInConfigId reject-dict
^https:\/\/topic\.kkmh\.com\/gamecard\/v\d\/activityModule\/fetchButtonInfo\?buttonConfigId reject-dict
^https:\/\/topic\.kkmh\.com\/gamecard\/v\d\/activityText\/getUserActivityTextInfo\?activityTextConfigId reject-dict

# 漫画阅读悬浮按钮广告
^https:\/\/pay\.kkmh\.com\/v\d\/kb\/comic_page_banner\/detail reject-dict

# 推广气泡
^https:\/\/(cdn-)?api\.kkmh\.com\/v\d\/business\/fake_push\/info reject-dict

# 商城周边 - 弹窗
^https:\/\/shop\.kkmh\.com\/mbff\/popup_administration\/page_management_popup_administration$ reject-dict

# 我的页面
^https:\/\/(cdn-)?api\.kkmh\.com\/v\d\/business\/mine\/business_config reject-dict

# 萌新礼
^https:\/\/(cdn-)?api\.kkmh\.com\/v\d\/checkin\/api\/new_user\/tab_info$ reject-dict
^https:\/\/h5\.kuaikanmanhua\.com\/game-h5\/new-user-welfare\/index\.html reject-200

[Script]
# 配置修改
http-response ^https:\/\/(cdn-)?api\.kkmh\.com\/v\d\/ironman\/comic\/recommend script-path = https://raw.githubusercontent.com/axtyet/Tool/main/Loon/Script/lodepuly/KuaiKanComic/KuaiKanComic_remove_ads.js, requires-body = true, tag = 配置修改

# 首页 - 热门 - 顶部标签
http-response ^https:\/\/(cdn-)?api\.kkmh\.com\/v\d\/ironman\/discovery_v\d\/tab_list_v\d script-path = https://raw.githubusercontent.com/axtyet/Tool/main/Loon/Script/lodepuly/KuaiKanComic/KuaiKanComic_remove_ads.js, requires-body = true, tag = 精简首页热门顶部标签

# 社区 - 发现 - 顶部标签
http-response ^https:\/\/cdn-social\.kkmh\.com\/v\d\/graph\/homepage\/comicVideo\/v\d\/configs script-path = https://raw.githubusercontent.com/axtyet/Tool/main/Loon/Script/lodepuly/KuaiKanComic/KuaiKanComic_remove_ads.js, requires-body = true, tag = 精简社区发现标签

[Mitm]
hostname = api.kkmh.com, topic.kkmh.com, h5.kuaikanmanhua.com, pay.kkmh.co, shop.kkmh.com, cdn-api.kkmh.com, dn-social.kkmh.com
