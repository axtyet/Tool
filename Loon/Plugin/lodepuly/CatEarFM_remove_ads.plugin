[Rewrite]
# 开屏广告
^https:\/\/app\.missevan\.com\/site\/launch\? reject

# 首页 - 推荐 - 热门搜索词、轮播图推广
# ^https:\/\/app\.missevan\.com\/site\/get-top$ response-body-json-del info.search_words info.banners info.extra_banners

# 首页 - 广播剧 - 轮播图推广、热门搜索词
^https:\/\/app\.missevan\.com\/drama\/catalog-homepage\? response-body-json-del info.banners info.hot_words info.extra_banners

# 首页 - 声音恋人 - 轮播图推广、热门搜索词
^https:\/\/app\.missevan\.com\/catalog\/sound-homepage\? response-body-json-del info.banners info.extra_banners info.hot_words

[Script]
# 首页标签
http-response ^https:\/\/app\.missevan\.com\/site\/icons\? script-path = https://raw.githubusercontent.com/axtyet/Tool/main/Loon/Script/lodepuly/CatEarFM/CatEarFM_remove_ads.js, requires-body = true, tag = 精简首页标签

[Mitm]
hostname = app.missevan.com